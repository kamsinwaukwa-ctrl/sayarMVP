# Sayar WhatsApp Commerce Platform - Backend Environment Variables

# Application
ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Database (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# WhatsApp Cloud API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Payment Providers
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key
KORAPAY_SECRET_KEY=your_korapay_secret_key
KORAPAY_PUBLIC_KEY=your_korapay_public_key

# Meta Business (for Catalog API)
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_SYSTEM_USER_TOKEN=your_meta_system_user_token

# External URLs
FRONTEND_URL=http://localhost:5173
WEBHOOK_BASE_URL=https://your-domain.railway.app

# Logging
LOG_LEVEL=INFO

# Job Processing
OUTBOX_WORKER_INTERVAL_SECONDS=30
RESERVATION_TTL_MINUTES=15

# Rate Limiting
RATE_LIMIT_PER_MERCHANT_PER_MINUTE=60